@using Outsourcing.Core
@model Labixa.Areas.Admin.ViewModel.ProductScheduleFormModel
@using Outsourcing.Core.Extensions;
@{
    ViewBag.Title = "Chỉnh sửa phòng";
}
@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
        </script>

        <ul class="breadcrumb">
            <li>
                <a href="/Admin">Trang chủ <i class="fa fa-home" aria-hidden="true"></i></a>
            </li>
            <li>
                <a href="/Admin/ProductSchedule/Room">Phòng <i class="fa fa-bed" aria-hidden="true"></i></a>
            </li>
            <li class="active">
                Chỉnh sửa <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            </li>
        </ul>
    </div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            @if (Model != null)
            {
                using (Html.BeginForm("RoomEdit", "ProductSchedule", null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)
                    <div class="tabbable">
                        <ul class="nav nav-tabs" id="myTab">
                            <li class="active">
                                <a data-toggle="tab" href="#tab1">
                                    <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                                    Nội dung
                                </a>
                            </li>
                            <li class="">
                                <a data-toggle="tab" href="#tab3">
                                    <i class="fa fa-tag" aria-hidden="true"></i>
                                    Thuộc tính phòng
                                </a>
                            </li>
                            <li class="">
                                <a data-toggle="tab" href="#tab4">
                                    <i class="fa fa-picture-o" aria-hidden="true"></i>
                                    Hình ảnh
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div id="tab1" class="tab-pane fade active in">
                                <div class="form-group ">
                                    <label class="col-sm-3 control-label no-padding-right">Khách sạn</label>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(model => model.ProductId, Model.ListProduct)
                                        @Html.ValidationMessageFor(model => model.ProductId)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right">Còn đặt được</label>
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.IsAvailable)
                                        @Html.ValidationMessageFor(model => model.IsAvailable)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right">Giá</label>
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Price)
                                        @Html.ValidationMessageFor(model => model.Price)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label no-padding-right">Số phòng tối đa</label>
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.MaxQuantity)
                                        @Html.ValidationMessageFor(model => model.MaxQuantity)
                                    </div>
                                </div>
                            </div>
                            <div id="tab3" class="tab-pane fade">
                                <div class="form-group ">
                                    @Html.EditorFor(model => model.ProductScheduleAttributeMappings)
                                </div>
                            </div>
                            <div id="tab4" class="tab-pane fade">
                                <div class="form-group ">
                                    @Html.EditorFor(model => model.ProductSchedulePictureMappings)
                                </div>
                            </div>
                        </div>
                    </div>
                    @*
                        partial for group button
                    *@
                    @Html.Partial("_PartialButtonGroup", "/Admin/ProductSchedule")
                }
            }
            else
            {
                <h1>Không tìm thấy sản phẩm!</h1>
            }
        </div>
    </div>
</div>