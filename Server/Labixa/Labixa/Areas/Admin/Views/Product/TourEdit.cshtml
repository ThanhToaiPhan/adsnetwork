@using Outsourcing.Core
@model Labixa.Areas.Admin.ViewModel.ProductFormModel
@{
    ViewBag.Title = "Chỉnh sửa tour";
}
@using Outsourcing.Core.Extensions;
@section scripts{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckeditor/config.js"></script>
}
@section breadcrumb
{
    <div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>
    <ul class="breadcrumb">
        <li>
            <a href="/Admin">Trang chủ <i class="fa fa-home" aria-hidden="true"></i></a>
        </li>
        <li>
            <a href="/Admin/Product/Tour">Tour <i class="fa fa-plane" aria-hidden="true"></i></a>
        </li>
        <li class="active">
            Chỉnh sửa <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        </li>
    </ul>
</div>
}
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-block alert-info">
                Chỉnh sửa nội dung : @Model.Name
            </div>
            @if (Model != null)
            {
                using (Html.BeginForm("TourEdit", "Product", null, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)

                <div class="tabbable">
                    <ul class="nav nav-tabs" id="myTab">
                        <li class="active">
                            <a data-toggle="tab" href="#tab1">
                                <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                                Nội dung
                            </a>
                        </li>
                        <li class="">
                            <a data-toggle="tab" href="#tab2">
                                <i class="fa fa-search" aria-hidden="true"></i>
                                Chỉnh sửa SEO
                            </a>
                        </li>
                        <li class="">
                            <a data-toggle="tab" href="#tab3">
                                <i class="fa fa-tag" aria-hidden="true"></i>
                                Thuộc tính tour
                            </a>
                        </li>
                        <li class="">
                            <a data-toggle="tab" href="#tab4">
                                <i class="fa fa-picture-o" aria-hidden="true"></i>
                                Hình ảnh
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="tab1" class="tab-pane fade active in">
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Loại Tour</label>
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.ProductCategoryId, Model.ListProductCategory)
                                    @Html.ValidationMessageFor(model => model.ProductCategoryId)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Tên Tour</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Cho phép hiển thị</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.IsPublic)
                                    @Html.ValidationMessageFor(model => model.IsPublic)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Hiển thị trên trang chủ</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.IsHomePage)
                                    @Html.ValidationMessageFor(model => model.IsHomePage)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Quãng đường đi</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Description)
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Giá</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Price)
                                    @Html.ValidationMessageFor(model => model.Price)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Hành trình</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Content, "CkEditor")
                                    @Html.ValidationMessageFor(model => model.Content)
                                </div>
                            </div>
                        </div>
                        <div id="tab2" class="tab-pane fade">
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Từ khóa tìm kiếm</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MetaKeywords)
                                    @Html.ValidationMessageFor(model => model.MetaKeywords)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Tiêu đề tìm kiếm</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MetaTitle)
                                    @Html.ValidationMessageFor(model => model.MetaTitle)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Mô tả tìm kiếm</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MetaDescription)
                                    @Html.ValidationMessageFor(model => model.MetaDescription)
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-3 control-label no-padding-right">Đường dẫn</label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.Slug)
                                    @Html.ValidationMessageFor(model => model.Slug)
                                </div>
                            </div>
                        </div>
                        

                        <div id="tab3" class="tab-pane fade">
                            <div class="form-group ">
                                @Html.EditorFor(model=>model.ProductAttributeMappings)
                            </div>
                        </div>
                        
                        <div id="tab4" class="tab-pane fade">
                            <div class="form-group ">
                                @Html.EditorFor(model => model.ProductPictureMappings)
                            </div>
                        </div>
                    </div>
                </div>



                           @*
                        partial for group button
                    *@
                    @Html.Partial("_PartialButtonGroup", "/Admin/Product")
                }
            }
            else
            {
               <h1>Không tìm thấy sản phẩm!</h1>
            }
        </div>
    </div>
</div>