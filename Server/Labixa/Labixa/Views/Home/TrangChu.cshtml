                                                    <span style="font-weight: bold;">Khách sạn:</span>
                                                    <span class="pull-right">@Model.listTourPromoHomePage[i].ProductAttributeMappings.Where(pam => pam.ProductAttribute.Name == "Khách sạn").FirstOrDefault().Value</span>
