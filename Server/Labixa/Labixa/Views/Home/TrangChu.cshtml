                                                    <span style="font-weight: bold;">Thời gian đi:</span>
                                                    <span class="pull-right">@Model.listTourPromoHomePage[i].ProductAttributeMappings.Where(pam => pam.ProductAttribute.Name == "Thời gian đi").FirstOrDefault().Value</span>
                                                </div>
