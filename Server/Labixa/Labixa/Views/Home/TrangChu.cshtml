                            <span style="font-weight: bold;">KHUYẾN MÃI</span>
                        </div>
                    </div>
                </div>
            </div>
            <div id="tour-promo-scroll">
                <div class="row">
                    @for (int i = 0; i < Model.listTourPromoHomePage.Count; i++)
                    {
                        if (i < Model.listTourPromoHomePage.Count)
                        {
                            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
                                <div class="tour-post effect2">
                                    <div class="row blog-post" style="margin: 0px;">
