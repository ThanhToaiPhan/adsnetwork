                                            <span>@Model.listTourPromoHomePage[i].Price.ToString("N0") VND</span>
                                        </div>
                                        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
                                            <div class="tour-booking">
                                                @if (Model.listTourPromoHomePage[i].ProductCategory.Name.Equals("Tour trong nước"))
                                                {
                                                    prefix = "/tour-trong-nuoc/";
                                                }
                                                else
                                                {
                                                    prefix = "/tour-nuoc-ngoai/";
                                                }
                                                <a href="@prefix@Model.listTourPromoHomePage[i].Slug">
                                                    <img src="~/Images/oceanlink/view_tour.png" />
