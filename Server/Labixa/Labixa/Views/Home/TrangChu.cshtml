                                        </div>
                                        <div class="blog-content">
                                            <div class="content-show">
                                                <div class="tour-post-title">
                                                    <span>@Model.listTourPromoHomePage[i].Name</span>
                                                </div>
                                                <div class="tour-post-location">
                                                    <span><i class="glyphicon glyphicon-map-marker" aria-hidden="true"></i> @Model.listTourPromoHomePage[i].Description</span>
                                                </div>
                                            </div>
