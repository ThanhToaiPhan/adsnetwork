                                                    <span style="font-weight: bold;">Phương tiện:</span>
                                                    <span class="pull-right">@Model.listTourPromoHomePage[i].ProductAttributeMappings.Where(pam => pam.ProductAttribute.Name == "Phương tiện").FirstOrDefault().Value</span>
                                                </div>
                                                <hr />
